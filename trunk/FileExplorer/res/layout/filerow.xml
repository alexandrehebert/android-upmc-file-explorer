<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:orientation="horizontal" android:padding="8dp">
	
       <CheckBox
           android:id="@+id/isChecked"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginRight="10dp"
           android:visibility="gone"
           android:text="" />

	<ImageView android:id="@+id/icon" android:layout_width="wrap_content"
		android:layout_height="fill_parent" android:src="@drawable/home"
		android:layout_marginRight="8dp" />

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:orientation="vertical">
		
		<TextView android:id="@+id/file" android:layout_width="match_parent"
			android:layout_height="20dp" android:text="No data"
            android:ellipsize="marquee"
            android:scrollHorizontally="false"
            android:singleLine="true"
			android:textColor="#000000" />
		
		<TextView android:id="@+id/fileMore" android:layout_width="match_parent"
			android:layout_height="20dp" android:text="No data"
			android:textStyle="italic"
            android:ellipsize="marquee"
            android:scrollHorizontally="false"
            android:singleLine="true"
			android:textColor="#777777" />
	
	</LinearLayout>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:orientation="vertical" android:layout_gravity="right" android:gravity="right">
		
		<TextView android:id="@+id/fileDate" android:layout_width="wrap_content"
			android:layout_height="20dp" android:text="No data"
			android:textColor="#777777" android:gravity="right" />
		
		<TextView android:id="@+id/fileRights" android:layout_width="wrap_content"
			android:layout_height="20dp" android:text="No data"
			android:textColor="#777777" android:gravity="right" />
	
	</LinearLayout>
</LinearLayout>